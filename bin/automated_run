#!/bin/bash -e
#
# Run the DAQ testing in a continuous loop, with shunting log output to rotating files.
#
# Some common options (ordered):
#   debug:  Set daq and mininet loglevels to 'debug'
#   image:  Use cmd/run instead of cmd/exrun.
#   latest: Passed to runner, will use latest daq image (not versioned).
#

ROOT=$(realpath $(dirname $0)/..)

cd $ROOT
cmd=exrun
args=
version=$(cat misc/RELEASE_VERSION)
PIDFILE=inst/daq.pid

if [ "$1" == debug ]; then
    args+=" daq_loglevel=debug"
    args+=" mininet_loglevel=debug"
    shift
fi

if [ "$1" == image ]; then
    cmd=run
    shift
fi

if [ "$1" == latest ]; then
    args="latest $args"
    version=latest
    shift
fi

if [ $# -gt 0 ]; then
    echo Unknown command line option $1.
    false
fi

if [ -f $PIDFILE ]; then
    pid=$(< $PIDFILE)
    if [ -d /proc/$pid ]; then
        echo Process $pid from $PIDFILE still running.
        false
    fi
fi

found=n
docker ps | fgrep daq- && found=y || true
if [ "$found" = y ]; then
    echo Lingering docker containers found.
    false
fi

sudo rm -rf inst
mkdir -p inst

echo Running version $version
echo Running cmd/$cmd $args
echo Logs in $ROOT/inst/exrun-\*.log

nohup cmd/$cmd "$@" $args 2>&1 | rotatelogs -t -c inst/exrun-%I.log 3600 &
