#!/bin/bash

ROOT=$(realpath $(dirname $0)/..)

ext_ofip=unknown
ext_ctrl=unknown
ext_intf=unknown
ext_addr=unknown

source $ROOT/local/system.conf

sudo ip addr del $ext_ofip dev $ext_ctrl || true
sudo ip addr add $ext_ofip dev $ext_ctrl || true

sudo ovs-vsctl add-port pri $ext_intf -- set interface $ext_intf ofport_request=1

ping -c 1 $ext_addr
