#!/bin/bash -e

ROOT=$(realpath $(dirname $0)/..)

cd $ROOT
cmd=run
args=-a

if [ "$1" == debug ]; then
    args+=" daq_loglevel=debug"
    args+=" mininet_loglevel=debug"
    shift
fi

if [ "$1" == exrun ]; then
    cmd=exrun
    shift
fi

running=$(docker inspect --format "{{.State.Running}}" daq-runner || true)
if [ "$running" == true ]; then
    echo Container daq-runner already active.
    false
fi

sudo rm -rf inst
mkdir -p inst

echo Logs in $ROOT/inst/exrun-\*.log

nohup cmd/$cmd "$@" $args 2>&1 | rotatelogs -t -c inst/exrun-%I.log 3600 &
