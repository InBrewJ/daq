#!/bin/bash -e

ROOT=$(realpath $(dirname $0)/..)

cd $ROOT
cmd=run
args=-a

if [ "$1" == debug ]; then
    args+=" daq_loglevel=debug"
    args+=" mininet_loglevel=debug"
    shift
fi

if [ "$1" == exrun ]; then
    cmd=exrun
    shift
fi


sudo rm -rf inst
mkdir -p inst

cmd/$cmd "$@" $args 2>&1 | rotatelogs -t -e -c inst/exrun-%I.log 3600
